server {
    listen 80;
    server_name localhost;

    root /usr/share/nginx/html;
    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }

    location /api/authentication/ {
        rewrite ^/api/authentication/(.*)$ /api/$1 break;
        proxy_pass http://maomaoworld_auth:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    location /api/music/ {
        rewrite ^/api/music/(.*)$ /api/music/$1 break;
        proxy_pass http://maomaoworld_music:7000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}
